<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.threads.MainActivity" >
	<EditText android:id="@+id/et_threads"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="threads"
	    android:ems="10"/>
	<EditText android:id="@+id/et_iterations"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="iterations"
	    android:ems="10"/>
	<Button android:id="@+id/btn_start"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="strart"/>
	<ScrollView 
	    android:id="@+id/srcollView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <TextView android:id="@+id/log_view"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        />
	    
	</ScrollView>
</LinearLayout>
